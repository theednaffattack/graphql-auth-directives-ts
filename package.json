{
  "name": "graphql-auth-directives-ts",
  "version": "1.0.0",
  "description": "Add authorization to your GraphQL API using schema directives. Authored in TypeScript.",
  "main": "./dist/index.js",
  "author": "Eddie Naff",
  "license": "MIT",
  "private": false,
  "homepage": "https://github.com/grand-stack/graphql-auth-directives#readme",
  "scripts": {
    "start": "nodemon ./examples/index.js --exec babel-node -e js",
    "dev": "nodemon",
    "start-test-setup": "babel-node ./test/helpers/test-setup.js",
    "test": "ava test/*.js",
    "build": "babel src --out-dir dist",
    "precommit": "lint-staged",
    "prepublish": "npm run build",
    "pretest": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grand-stack/graphql-auth-directives.git"
  },
  "lint-staged": {
    "*.{js,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "bugs": {
    "url": "https://github.com/grand-stack/graphql-auth-directives/issues"
  },
  "dependencies": {
    "apollo-errors": "^1.9.0",
    "cross-fetch": "^3.0.6",
    "graphql": "^15.5.0",
    "graphql-tools": "^7.0.4",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.16",
    "@babel/core": "^7.12.16",
    "@babel/node": "^7.12.16",
    "@babel/preset-env": "^7.12.16",
    "@types/jsonwebtoken": "^8.5.0",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link-http": "^1.5.17",
    "apollo-server": "^2.21.0",
    "ava": "^3.15.0",
    "dotenv": "^8.2.0",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  }
}
